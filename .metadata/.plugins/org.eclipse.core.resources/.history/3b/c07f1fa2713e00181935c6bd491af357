import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.firefox.FirefoxDriver;

public class CommonClass {
	WebDriver driver;
	WebElement element;
	
	//Open browser in Firefox
	public void OpenBrowser(String base_url) {
		driver = new FirefoxDriver();
		driver.get(base_url);
	}
	
	
	public void GetTitle(String base_url) {
		driver.getTitle();
	}
	
	
	//To click an attribute in Webpage
	public void ClickAttribute(String locator_name, String locator_value) {
		switch(locator_name){
			case("id"): driver.findElement(By.id(locator_value)).click();break;
			case("name"): driver.findElement(By.name(locator_value)).click();break;
			case("xpath"): driver.findElement(By.xpath(locator_value)).click();break;
			case("cssSelector"): driver.findElement(By.cssSelector(locator_value)).click();break;
			case("className"): driver.findElement(By.className(locator_value)).click();break;
			case("linkText"): driver.findElement(By.linkText(locator_value)).click();break;
			case("partialLinkText"): driver.findElement(By.partialLinkText(locator_value)).click();break;
			case("tagName"): driver.findElement(By.tagName(locator_value)).click();break;
		}
	}
	
	//To Enter Text in Textbox
	public void EnterOnTextbox(String locator_name, String locator_value, String value_on_taxtbox) {
		switch(locator_name){
			case("id"): driver.findElement(By.id(locator_value)).sendKeys(value_on_taxtbox);
			case("name"): driver.findElement(By.name(locator_value)).sendKeys(value_on_taxtbox);
			case("xpath"): driver.findElement(By.xpath(locator_value)).sendKeys(value_on_taxtbox);
			case("cssSelector"): driver.findElement(By.cssSelector(locator_value)).sendKeys(value_on_taxtbox);
			case("className"): driver.findElement(By.className(locator_value)).sendKeys(value_on_taxtbox);
			case("linkText"): driver.findElement(By.linkText(locator_value)).sendKeys(value_on_taxtbox);
			case("partialLinkText"): driver.findElement(By.partialLinkText(locator_value)).sendKeys(value_on_taxtbox);
			case("tagName"): driver.findElement(By.tagName(locator_value)).sendKeys(value_on_taxtbox);
		}
	}
	
	//To Clear Text from Textbox
	public void ClearTextFromTexBox(String locator_name, String locator_value) {
		switch(locator_name){
			case("id"): driver.findElement(By.id(locator_value)).clear();
			case("name"): driver.findElement(By.name(locator_value)).clear();
			case("xpath"): driver.findElement(By.xpath(locator_value)).clear();
			case("cssSelector"): driver.findElement(By.cssSelector(locator_value)).clear();
			case("className"): driver.findElement(By.className(locator_value)).clear();
			case("linkText"): driver.findElement(By.linkText(locator_value)).clear();
			case("partialLinkText"): driver.findElement(By.partialLinkText(locator_value)).clear();
			case("tagName"): driver.findElement(By.tagName(locator_value)).clear();
		}
	}
	
//	public static void main(String[] args) {
//		CommonClass common_class = new CommonClass();
//		common_class.openBrowser("https://www.amazon.in");
//	}
		
}
