import org.testng.Assert;
import org.testng.annotations.Test;

public class ExcerciseOne{
	
	String base_url = "https://www.amazon.in/";
	CommonClass common_class = new CommonClass();
	
	@Test
	public void logoValidation() {
		//M1.S1.TC1
		common_class.OpenBrowser(base_url);
		common_class.ClickAttribute("className", "nav-logo-link"); //Amazon Logo className: nav-logo-link
		Assert.assertEquals(common_class.GetTitle(), 
				"Online Shoppng site in India: Shop Online for Mobiles, Books, Watches, Shoes and More - Amazon.in");
	
	}
	@Test
	public void primePageValidation() {
		//M1.S2.TC1
		common_class.ClickAttribute("linkText", "Try Prime");
		Assert.assertEquals(common_class.GetTitle(), 
				"Amazon.in: Amazon Prime");
	}
	@Test
	public void deliverToButtonValidation() {
		//M1.S3.TC1
		//DeliverTo logo xpath: //*[@id="nav-global-location-slot"]/span/a
		
		common_class.ClickAttribute("xpath", "//*[@id=\"nav-global-location-slot\"]/span/a");
		//pincode_textbox className: GLUX_Full_Width a-declarative
		common_class.ClearTextFromTexBox("className", "GLUX_Full_Width a-declarative");
		common_class.EnterOnTextbox("className", "GLUX_Full_Width a-declarative","600058");
		//pincode_apply_button className: a-column a-span4 a-span-last
		common_class.ClickAttribute("className", "a-column a-span4 a-span-last");
	}
}
