import org.testng.Assert;
import org.testng.annotations.Test;

public class ExcerciseOne{
	
	String base_url = "https://www.amazon.in/";
	CommonClass common_class = new CommonClass();
	
	@Test
	public void primePageValidation() {
		//M1.S2.TC1
		//Step 1
		common_class.openBrowser(base_url);
		//Step 2
		common_class.clickAttribute("linkText", "Try Prime");
		Assert.assertEquals(common_class.getTitle(), 
				"Amazon.in: Amazon Prime");
		Assert.assertEquals(common_class.getText("id","a-autoid-0-announce"), 
				"Login to join Prime");//Prime Button id: //a-autoid-0-announce
		//Step 3
		common_class.clickAttribute("id", "a-autoid-0-announce");
		Assert.assertEquals(common_class.getTitle(), 
				"Amazon Sign In");
		//Step 4
		common_class.clickAttribute("id", "continue");//continue button id: continue
		Assert.assertEquals(common_class.getText("xpath","//*[@id=\"auth-email-missing-alert\"]/div/div"), 
				"Enter your email or mobile phone number");//Error Label xpath: //*[@id="auth-email-missing-alert"]/div/div
		//Step 5
		common_class.enterOnTextbox("id", "ap_email", "sachin@");
		//Step 6
		common_class.clickAttribute("id", "continue");//continue button id: continue
		Assert.assertEquals(common_class.getText("className","a-list-item"), 
				"\r\n" + 
				"            We cannot find an account with that email address\r\n" + 
				"          ");//Error Label className: a-list-item
		//Step 7
		common_class.clearTextFromTexBox("id", "ap_email");
		//Step 8
		common_class.enterOnTextbox("id", "ap_email", "1234567");
		//Step 9
		common_class.clickAttribute("id", "continue");//continue button id: continue
		Assert.assertEquals(common_class.getText("className","a-list-item"), 
				"\r\n" + 
				"            The phone number you entered cannot be used to sign in. Please check that the number you entered is correct or sign in with your email instead.\r\n" + 
				"          ");//Error Label className: a-list-item
		//Step 10
		common_class.clickAttribute("className", "a-icon a-icon-logo");
		Assert.assertEquals(common_class.getTitle(), 
				"Online Shopping site in India: Shop Online for Mobiles, Books, Watches, Shoes and More - Amazon.in");
		
		
	}
	@Test
	public void deliverToButtonValidation() {
		//M1.S3.TC1
		common_class.clickAttribute("xpath", "//*[@id=\"nav-global-location-slot\"]/span/a");//DeliverTo logo xpath: //*[@id="nav-global-location-slot"]/span/a
		
		common_class.clearTextFromTexBox("className", "GLUX_Full_Width a-declarative");//pincode_textbox className: GLUX_Full_Width a-declarative
		common_class.enterOnTextbox("className", "GLUX_Full_Width a-declarative","60005");//pincode_textbox className: GLUX_Full_Width a-declarative
		common_class.clickAttribute("className", "a-column a-span4 a-span-last");//pincode_apply_button className: a-column a-span4 a-span-last
		Assert.assertEquals(common_class.getTitle(), 
				"Amazon.in: Amazon Prime");
	}
}